<?xml version="1.0"?>

<?if $(sys.BUILDARCH)="x86"?>
    <?define Program_Files="ProgramFilesFolder"?>
<?elseif $(sys.BUILDARCH)="x64"?>
    <?define Program_Files="ProgramFiles64Folder"?>
<?else?>
    <?error Unsupported value of sys.BUILDARCH=$(sys.BUILDARCH)?>
<?endif?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

   <Product Id="*" UpgradeCode="bbda68e8-0e3c-4ec0-843e-3efe816763c4"
            Name="GoPhaser"
            Version="0.0.4"
            Manufacturer="Noofbiz"
            Language="1033">

      <Package InstallerVersion="200" Compressed="yes" Comments="Windows Installer Package" InstallScope="perMachine"/>

      <Media Id="1" Cabinet="product.cab" EmbedCab="yes"/>

      <Upgrade Id="bbda68e8-0e3c-4ec0-843e-3efe816763c4">
         <UpgradeVersion Minimum="0.0.4" OnlyDetect="yes" Property="NEWERVERSIONDETECTED"/>
         <UpgradeVersion Minimum="0.0.0" Maximum="0.0.4" IncludeMinimum="yes" IncludeMaximum="no"
                         Property="OLDERVERSIONBEINGUPGRADED"/>
      </Upgrade>
      <Condition Message="A newer version of this software is already installed.">NOT NEWERVERSIONDETECTED</Condition>

      <Directory Id="TARGETDIR" Name="SourceDir">

         <Directory Id="$(var.Program_Files)">
            <Directory Id="INSTALLDIR" Name="GoPhaser">
               
               <Component Id="ApplicationFiles" Guid="5cad0265-2f15-4231-86b6-7a57be3c4a72">
                  
                    <File Id="ApplicationFile0" Source="..\GoPhaser.exe"/>
                  
               </Component>
               
               
               
               <Directory Id="APPDIR0" Name="assets" />
               
               
            </Directory>
         </Directory>

         
         <Component Id="ENVS" Guid="80f9ea2e-b131-4eca-ba94-bec3669ced23">
          
          <Environment Id="ENV0"
            Name="PATH"
            Value="[INSTALLDIR]"
            Permanent="no"
            Part="last"
            Action="set"
            System="no" />
          
        </Component>
        

         
         <Directory Id="ProgramMenuFolder">
            <Directory Id="ProgramMenuSubfolder" Name="GoPhaser">
               <Component Id="ApplicationShortcuts" Guid="1ad75374-1a6c-4c32-a3ab-982375e27007">
               
                  <Shortcut Id="ApplicationShortcut0"
                        Name="GoPhaser"
                        Description="Easy webserver for testing phaser or other js projects"
                        Target="[INSTALLDIR]\GoPhaser.exe"
                        WorkingDirectory="INSTALLDIR"
                        
                        >
                        
                  </Shortcut>
                  <RegistryValue Root="HKCU"
                    Key="Software\Noofbiz\GoPhaser"
                    Name="installed0"
                    Type="integer" Value="1" KeyPath="yes"/>
                
                <RemoveFolder Id="ProgramMenuSubfolder" On="uninstall"/>
               </Component>
            </Directory>
         </Directory>
         

      </Directory>

      
      
      <InstallExecuteSequence>
         <RemoveExistingProducts After="InstallValidate"/>
         
         
      </InstallExecuteSequence>

      <Feature Id="DefaultFeature" Level="1">
         
         <ComponentRef Id="ENVS"/>
         
         
         <ComponentRef Id="ApplicationFiles"/>
         
         
         <ComponentRef Id="ApplicationShortcuts"/>
         
         
         <ComponentGroupRef Id="AppFiles0" />
         
      </Feature>

      <UI>
         <!-- Define the installer UI -->
         <UIRef Id="WixUI_HK" />
      </UI>

      <Property Id="WIXUI_INSTALLDIR" Value="INSTALLDIR" />

      <!-- this should help to propagate env var changes -->
      <CustomActionRef Id="WixBroadcastEnvironmentChange" />

   </Product>

</Wix>
